@model List<Libro>

<h1 style="background-color: chartreuse">Libros</h1>

@Html.Raw(ViewData["paginas"])
<table class="table table-bordered table-info">
    <thead>
        <tr>
            <th>Título</th>
            <th>Portada</th>
            <th>Precio</th>
            <th>IdGenero</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Libro libro in Model)
        {
            <tr>
                <td>@libro.Titulo</td>
                <td>
                    <img src="~/images/@libro.Portada" style="width: 150px; height: 150px" />
                </td>
                <td>@libro.Precio</td>
                <td>@libro.IdGenero</td>
                <td>
                    <a asp-controller="Libros" asp-action="Details"
                       asp-route-idlibro="@libro.IdLibro"
                       class="btn btn-outline-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

