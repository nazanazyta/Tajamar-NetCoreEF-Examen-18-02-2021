@model List<Libro>

@{
    //int total = Context.Session.GetObject<int>("total");
    List<int> cantidades = ViewData["cantidades"] as List<int>;
    int contador = 0;
    int totallibro = 0;
    int totalcompra = 0;
}

<h1 style="background-color: lightgrey">Carrito:</h1>

<table class="table table-light">
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Libro lib in Model)
        {
            <tr>
                <td>@lib.Titulo</td>
                <td>@lib.Precio</td>
                <td>@cantidades[contador]</td>
                @{totallibro = lib.Precio * cantidades[contador];
                    totalcompra += totallibro;
                    contador++;
                    }
                <td>@totallibro</td>
            </tr>
        }
    </tbody>
</table>

<h1>Total: @totalcompra €</h1>

<a asp-controller="Libros" asp-action="Comprar" class="btn btn-warning">Comprar</a>